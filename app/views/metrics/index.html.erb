<h1>Listing metrics</h1>

<table>
  <thead>
    <tr>
      <th>Marketing plan</th>
      <th>Milestone of completion</th>
      <th>Success indicator</th>
      <th>Monitoring method</th>
      <th>Review outcomes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.marketing_plan %></td>
        <td><%= metric.milestone_of_completion %></td>
        <td><%= metric.success_indicator %></td>
        <td><%= metric.monitoring_method %></td>
        <td><%= metric.review_outcomes %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
