<%- model_class = Metric -%>
<div class="page-header">
  <h1><%=t '.title', :default => Metric %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:milestone_of_completion) %></th>
      <th><%= model_class.human_attribute_name(:success_indicator) %></th>
      <th><%= model_class.human_attribute_name(:monitoring_method) %></th>
      <th><%= model_class.human_attribute_name(:review_outcomes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.id %></td>
        <td><%= metric.milestone_of_completion %></td>
        <td><%= metric.success_indicator %></td>
        <td><%= metric.monitoring_method %></td>
        <td><%= metric.review_outcomes %></td>
        <td><%=l metric.created_at, format: :long %></td>
        <td>
          <%= link_to metric_path(metric), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to metric_path(metric), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_metric_path,
            :class => 'btn btn-primary' %>
