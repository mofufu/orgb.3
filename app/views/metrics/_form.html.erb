<%= simple_form_for(@metric) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :marketing_plan %>
    <%= f.input :milestone_of_completion %>
    <%= f.input :success_indicator %>
    <%= f.input :monitoring_method %>
    <%= f.input :review_outcomes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
