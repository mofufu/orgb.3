<h1>Listing strategies</h1>

<table>
  <thead>
    <tr>
      <th>Marketing plan</th>
      <th>Type of activity</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Implementation team</th>
      <th>Estimated cost</th>
      <th>Media strategy</th>
      <th>Distribution channels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strategies.each do |strategy| %>
      <tr>
        <td><%= strategy.marketing_plan %></td>
        <td><%= strategy.type_of_activity %></td>
        <td><%= strategy.start_date %></td>
        <td><%= strategy.end_date %></td>
        <td><%= strategy.implementation_team %></td>
        <td><%= strategy.estimated_cost %></td>
        <td><%= strategy.media_strategy %></td>
        <td><%= strategy.distribution_channels %></td>
        <td><%= link_to 'Show', strategy %></td>
        <td><%= link_to 'Edit', edit_strategy_path(strategy) %></td>
        <td><%= link_to 'Destroy', strategy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strategy', new_strategy_path %>
