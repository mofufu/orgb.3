<%- model_class = Strategy -%>
<div class="page-header">
  <h1><%=t '.title', :default => Strategy %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type_of_activity) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.type_of_activity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_date) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.start_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end_date) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.end_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:implementation_team) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.implementation_team %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_cost) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.estimated_cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:media_strategy) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.media_strategy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:distribution_channels) %></dt>
      <dd><pre class="prettyprint"><%= @strategy.distribution_channels %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              strategies_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_strategy_path(@strategy), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              strategy_path(@strategy),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

