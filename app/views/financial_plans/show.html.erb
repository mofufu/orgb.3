<%- model_class = FinancialPlan -%>
<div class="page-header">
  <h1><%=t '.title', :default => FinancialPlan %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:important_assumptions) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.important_assumptions %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:key_financial_indicators) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.key_financial_indicators %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:projected_profit_and_loss) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.projected_profit_and_loss %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:projected_cash_flow) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.projected_cash_flow %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:projected_balance_sheet) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.projected_balance_sheet %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:long_term_financial_plan) %></dt>
      <dd><pre class="prettyprint"><%= @financial_plan.long_term_financial_plan %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              financial_plans_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_financial_plan_path(@financial_plan), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              financial_plan_path(@financial_plan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

