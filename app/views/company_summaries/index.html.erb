<%- model_class = CompanySummary -%>
<div class="page-header">
  <h1><%=t '.title', :default => CompanySummary %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:ownership) %></th>
      <th><%= model_class.human_attribute_name(:start_plan) %></th>
      <th><%= model_class.human_attribute_name(:locations) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @company_summaries.each do |company_summary| %>
      <tr>
        <td><%= company_summary.id %></td>
        <td><%= company_summary.ownership %></td>
        <td><%= company_summary.start_plan %></td>
        <td><%= company_summary.locations %></td>
        <td><%=l company_summary.created_at, format: :long %></td>
        <td>
          <%= link_to company_summary_path(company_summary), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to company_summary_path(company_summary), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_summary_path,
            :class => 'btn btn-primary' %>
