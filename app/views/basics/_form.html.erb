<%= form_for @basic, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :value_proposition, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :value_proposition, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :objective, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :objective, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :plan_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :plan_description, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  basics_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
