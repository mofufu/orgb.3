<h1>Listing basics</h1>

<table>
  <thead>
    <tr>
      <th>Value proposition</th>
      <th>Objective</th>
      <th>Plan description</th>
      <th>Marketing plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basics.each do |basic| %>
      <tr>
        <td><%= basic.value_proposition %></td>
        <td><%= basic.objective %></td>
        <td><%= basic.plan_description %></td>
        <td><%= basic.marketing_plan %></td>
        <td><%= link_to 'Show', basic %></td>
        <td><%= link_to 'Edit', edit_basic_path(basic) %></td>
        <td><%= link_to 'Destroy', basic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

