<%- model_class = Basic -%>
<div class="page-header">
  <h1><%=t '.title', :default => Basic %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:value_proposition) %></dt>
      <dd><pre class="prettyprint"><%= @basic.value_proposition %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:objective) %></dt>
      <dd><pre class="prettyprint"><%= @basic.objective %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:plan_description) %></dt>
      <dd><pre class="prettyprint"><%= @basic.plan_description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              basics_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_basic_path(@basic), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              basic_path(@basic),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

